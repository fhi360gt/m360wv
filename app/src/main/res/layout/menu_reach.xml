<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/collect360">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/bandera"
            android:layout_gravity="right"
            android:layout_marginTop="6dp" />

        <View
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.3"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_groupIndicator"
            android:textColor="#ff080808"
            android:textSize="35dp"
            android:layout_weight="1.25" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".42"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <View
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight=".1"/>
            <ImageButton
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight=".16"
                android:id="@+id/btn_collect"
                android:gravity="center"
                android:background="@drawable/btn_collect" />
            <View
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight=".1"/>
            <ImageButton
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_weight=".16"
                android:id="@+id/btn_analytics"
                android:gravity="center"
                android:background="@drawable/btn_analytics" />
            <View
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight=".1"/>
        </LinearLayout>

        <View
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.145"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.19"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingBottom="7dp"
            android:gravity="center_horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_back"
                android:background="@drawable/back_btn"
                android:layout_gravity="bottom|right" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loading"
                android:background="@drawable/btn_sync"
                android:layout_gravity="bottom" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>